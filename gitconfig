##
# gitconfig
#
# gitconfigファイルはsystem > global > localの順に読まれ
# 後から読み込んだデータに上書きされる
#

[http]
	postBuffer = 524288000

[user]
	email = ikejpcw@gmail.com
	name = ike-jp

[core]
	editor = vim
	excludesfile = ~/.gitignore

[alias]
	co = checkout
	st = status
	c = commit
	bra = branch
	hist = log --pretty=format:\\\"%h %ad | %s%d [%an]\\\" --graph --date=short

[color]
	ui = auto

[fetch]
	# git fetchした際にリモートリポジトリで削除されているものを
	# ローカルリポジトリでも削除する
	prune = true
